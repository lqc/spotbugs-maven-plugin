    <wagonGitsiteExtensionVersion>0.3.1</wagonGitsiteExtensionVersion>

    <spotbugsTestDebug>false</spotbugsTestDebug>

    <integrationTestSrc>${project.build.directory}/it-src-spotbugs</integrationTestSrc>
    <it.copyFromLocal.skip>true</it.copyFromLocal.skip>
    <it.copyFromJAR.skip>true</it.copyFromJAR.skip>

    <pmd.skip>true</pmd.skip>
    <cpd.skip>true</cpd.skip>
    <checkstyle.skip>true</checkstyle.skip>
